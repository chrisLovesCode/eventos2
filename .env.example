# Database Configuration
# ✅ Container-to-Container: Use service names from docker-compose.yml
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/eventos2_db
POSTGRES_DB=eventos2_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Node Environment
NODE_ENV=development

# API Configuration
PORT=3000
# ✅ For server-side calls inside container (e.g. Next.js SSR, API Routes)
API_URL=http://api:3000
# ✅ For direct access from host system
API_URL_HOST=http://localhost:3000

# Next.js Configuration
# ⚠️ NEXT_PUBLIC_* runs in the browser, so use localhost!
# The browser runs on your host system, not inside the container
NEXT_PUBLIC_API_URL=http://localhost:3000
CSP_STRICT=false

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@eventos2.com
PGADMIN_DEFAULT_PASSWORD=admin

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-secret-change-in-production

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3001
# ⚠️ Include both: Container names AND localhost
# Container-to-Container: http://webclient:3000
# Browser-to-Container: http://localhost:3001, http://localhost:3000
CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://webclient:3000

# Geocoding Service (Geoapify)
GEOAPIFY_API_KEY=your-geoapify-api-key

# Admin User Configuration
ADMIN_EMAIL=admin@example.dev
ADMIN_NICK=admin
ADMIN_PASSWORD=changeMe

# Test User Configuration
TEST_USER_EMAIL=testuser@example.dev
TEST_USER_NICK=testuser
TEST_USER_PASSWORD=changeMe
# ============================================
# Email Configuration (SMTP)
# ============================================
# For development: Use MailHog (included in docker-compose)
# For production: Use real SMTP (Gmail, SendGrid, AWS SES, etc.)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@eventos2.dev

# Frontend URL for email links
FRONTEND_URL=http://localhost:3001

# ============================================
# OAuth Providers Configuration
# ============================================

# Google OAuth 2.0
# Get credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# Facebook OAuth
# Get credentials: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple Sign In
# Get credentials: https://developer.apple.com/account/resources/identifiers/list/serviceId
APPLE_CLIENT_ID=com.eventos2.signin
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8
